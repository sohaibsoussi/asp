@model Project_s7.Models.Horses

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Horse 🐴</h1>

<h4>Are you sure you want to delete this Horse?</h4>

<div class="row">
    <!-- Image Column to the left -->
    <div class="col-md-4">
        <img class="img-fluid rounded border shadow-lg" src="@Model.HorsePictureLink" alt="Horse Image" style="max-width: 100%; height: auto;">
    </div>

    <!-- Details Column Adjusted to the right -->
    <div class="col-md-8">

        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HorseName)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HorseName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HorseType)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HorseType)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HorseDescription)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HorseDescription)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HorsePrice)
            </dt>
            <dd class="col-sm-8">
                $@Html.DisplayFor(model => model.HorsePrice)k
            </dd>
        </dl>
        <div class="mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Confirm Delete" class="btn btn-danger" />
                <a class="btn DetailBtn text-white" asp-action="Index">Back to List</a>
            </form>
        </div>
    </div>
</div>

